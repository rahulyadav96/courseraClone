            font-weight: 700;
            margin-left: 100px;
            font-size: 14px;
            font-family: 'Open Sans', sans-serif;
            line-height: 21px;
        }

        /* container containg left portion (logo + text) */
        #addmisions_container {
            margin-top: 0;
            padding-top: 0;
            height: 400px;
            width: 60%;
            position: absolute;
            background-color: rgb(19, 41, 75);

        }



        #get_started::before {


            content: "";
            position: relative;
            height: 100%;
            width: 1000px;
            z-index: -1;
            opacity: 0.89;

        }

        /* styling of div containig get started today and apply and requests buttons */

        #get_started {

            width: 600px;
            height: 400px;
            background-image: url("https://images.ctfassets.net/wp1lcwdav1p1/phdtZ838jtqiZ0OUP1Owr/589c4c2881844be40ee0276848a56d46/4-hero_background_image__2_.jpeg");
            background-color: rgb(255, 255, 255);
            opacity: 0.85;
            float: right;



        }

        /* text and buttons styling inside get started div  starts*/

        #forText {
            width: 350px;
            height: 300px;
            margin: auto;
            opacity: 2;
            margin-top: 30px;
            margin-left: 150px;
            background-color: white;
        }



        #empty_above_started {
            height: 12px;
            margin-bottom: 25px;
            width: 100%;
            background-color: rgb(42, 115, 204);
        }

        #forText>h3 {

            font-size: 18px;
            font-family: 'Open Sans', sans-serif;
            font-weight: 800;
            line-height: 27px;
            margin-left: 20px;
            margin-bottom: 5px;

        }

        #forText>p {

            margin-top: 5px;
            font-size: 14px;
            font-family: 'Open Sans', sans-serif;
            font-weight: 200;
            line-height: 24px;
            margin-left: 20px;

        }

        .get_button {

            width: 90%;
            margin-left: 5%;
            margin-bottom: 10px;
            height: 50px;
            background-color: rgb(15, 96, 191);
            color: white;
            font-size: 16px;
            border: 1px solid rgb(15, 96, 191);
            text-align: center;
            font-family: 'Open Sans', sans-serif;
            text-decoration: none;
            font-weight: 600;
            line-height: 24px;
        }

        .get_button:hover {
            background-color: rgb(11, 68, 133);
            color: white;
        }



        .request_button {

            width: 90%;
            margin-left: 5%;
            margin-bottom: 10px;
            height: 50px;
            background-color: white;
            color: rgb(15, 96, 191);
            border: 1px solid rgb(15, 96, 191);
