    <style>
        #container {

            height: 800px;
            margin: auto;


        }

        /* Notice heading styling  */

        #notice {

            height: 40px;
            background-color: rgb(38, 54, 116);
            margin-bottom: 0;
           
            text-align: center;
            padding: 5px;
            font-size: 14px;
            font-weight: 700;
            font-family: 'Open Sans', sans-serif;
            padding-top: 15px;
