            margin-top: 400px;
            height: 40px;
            text-align: center;
            padding-top: 10px;

        }

        #listItems>ul {
            display: flex;
            
        }

        #listItems>ul li {
            display: flex;
            margin-left: 80px;
            font-family: 'Open Sans', sans-serif;
            font-weight: 400;
            line-height: 21px;
            font-size: 14px;
        }

       

        #right_box {

            margin-top: 70px;
            width: 36%px;
            float: right;
            
        }



        #left_box {

            margin-top: 60px;
            margin-left: 100px;
            width: 64%;
            float: left;
        }

        #left_box h1 {
            font-family: 'Open Sans', sans-serif;
            font-size: 34px;
            color: rgb(55, 58, 60);

        }

        #left_box p {
            font-family: 'Open Sans', sans-serif;
            font-size: 14px;
            color: rgb(55, 64, 78);
            margin-right: 85px;

        }

        #right_box>h3 {

            font-family: 'Open Sans', sans-serif;

