            text-align: center;
            font-family: 'Open Sans', sans-serif;
            font-weight: 600;
            line-height: 24px;
        }

        .request_button:hover {
            background-color: rgb(15, 96, 191);
            color: white;
        }

        /* text and buttons styling inside get started div  ends*/




        /* styling of left side blue box logo and text starts */

        #logo {


            height: 100%;
            margin-left: 100px;

        }

        #logo>img {
            margin-top: 30px;
            width: 180px;
            height: 50px;
        }

        #logo>h1 {

            color: white;

            font-size: 34px;
            font-weight: 700;
            font-family: 'Open Sans', sans-serif;
            line-height: 42px;
            margin-bottom: 0px;


        }

        #logo>h2 {

            margin-top: 0px;

            color: white;

            font-size: 24px;
            font-weight: 400;
            font-family: 'Open Sans', sans-serif;
            line-height: 36px;


        }

        #logo>button {
            background-color: inherit;
